{
    "tasks": [
        {
            "type": "shell",
            "label": "compiler debug",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++20",
                "${file}",
                "-I./include",
                "-v",
                "-o",
                "./target/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "test"
        },
        {
            "type": "shell",
            "label": "compiler release",
            "command": "x86_64-w64-mingw32-gcc",
            "args": [
                "-Iinclude",
                "-O2",
                "-o",
                "/mnt/c/Users/nan/release/${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build"
        },
    ],
    "version": "2.0.0"
}